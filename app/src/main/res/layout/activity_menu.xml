<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="210dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="360dp">

                    <ImageButton
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_baseline_menu_24" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/latar1"></ImageView>


            </RelativeLayout>

        </LinearLayout>


        
        <ImageView
            android:layout_width="360dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/pilihmobil">
        </ImageView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/hactback"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/hatchback">
            </ImageButton>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="--------------------------------------------">

            </TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/mvp"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/mvp">
            </ImageButton>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="--------------------------------------------">

            </TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/suv"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/suv">
            </ImageButton>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:text="--------------------------------------------">

            </TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/commercial"
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/commercial">
            </ImageButton>
        </androidx.cardview.widget.CardView>

        <ImageButton
            android:id="@+id/keluar"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/keluarrr">

        </ImageButton>

    </LinearLayout>


</ScrollView>